{
  "all": true,
  "include": [
    "app/**/*.{ts,tsx}",
    "components/**/*.{ts,tsx}",
    "hooks/**/*.{ts,tsx}",
    "lib/**/*.{ts,tsx}"
  ],
  "exclude": [
    "**/*.d.ts",
    "**/*.test.{ts,tsx}",
    "**/*.spec.{ts,tsx}",
    "**/*.cy.{ts,tsx}",
    "**/node_modules/**",
    "**/cypress/**"
  ],
  "reporter": [
    "html",
    "lcov",
    "text-summary"
  ],
  "report-dir": "coverage/combined",
  "temp-dir": ".nyc_output",
  "extension": [
    ".ts",
    ".tsx"
  ],
  "sourceMap": true,
  "instrument": true,
  "statements": 80,
  "branches": 80,
  "functions": 80,
  "lines": 80
} 